<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.LoginDao">
    <insert id="addUser">
        insert into user(username,password,email,state) value (#{username},#{password},#{email},#{state})
    </insert>
    <update id="updateState">
        update user set state = #{state} where id = #{id}
    </update>
    <update id="editUser">
        update user set username = #{username} ,password = #{password},email = #{email} where id = #{id}
    </update>
    <delete id="deleteUser">
        delete from user where id = #{id}
    </delete>
    <select id="getAllUser" resultType="com.example.demo.pojo.User">
        select * from user
        <if test="username != null">
            where username like #{username}
        </if>
        limit #{pageStart},#{pageSize}
    </select>
    <select id="getUserCounts" resultType="java.lang.Integer">
        select count(*) from user
        <if test="username != null">
            where username like #{username}
        </if>
    </select>
    <select id="getUpdateUser" resultType="com.example.demo.pojo.User">
        select * from user where id = #{id}
    </select>

</mapper>